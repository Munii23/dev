<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhtw.tourplanner.controller.PopUpTourController">
    <Label text="Name:" layoutX="14.0" layoutY="14.0"/>
    <TextField fx:id="nameField" layoutX="120.0" layoutY="10.0" prefWidth="200.0"/>

    <Label text="Description:" layoutX="14.0" layoutY="50.0"/>
    <TextField fx:id="descriptionField" layoutX="120.0" layoutY="46.0" prefWidth="200.0"/>

    <Label text="From Location:" layoutX="14.0" layoutY="86.0"/>
    <TextField fx:id="fromLocationField" layoutX="120.0" layoutY="82.0" prefWidth="200.0"/>
    <ListView fx:id="fromLocationResults" layoutX="120.0" layoutY="110.0" prefHeight="100.0" prefWidth="200.0"/>

    <Label text="To Location:" layoutX="14.0" layoutY="200.0"/>
    <TextField fx:id="toLocationField" layoutX="120.0" layoutY="196.0" prefWidth="200.0"/>
    <ListView fx:id="toLocationResults" layoutX="120.0" layoutY="224.0" prefHeight="100.0" prefWidth="200.0"/>

    <Label text="Transport Type:" layoutX="14.0" layoutY="330.0"/>
    <TextField fx:id="transportTypeField" layoutX="120.0" layoutY="326.0" prefWidth="200.0"/>

    <Label text="Distance:" layoutX="14.0" layoutY="366.0"/>
    <TextField fx:id="distanceField" layoutX="120.0" layoutY="362.0" prefWidth="200.0"/>

    <Label text="Estimated Time:" layoutX="14.0" layoutY="402.0"/>
    <TextField fx:id="estimatedTimeField" layoutX="120.0" layoutY="398.0" prefWidth="200.0"/>

    <Label text="Route Information:" layoutX="14.0" layoutY="438.0"/>
    <TextField fx:id="routeInformationField" layoutX="120.0" layoutY="434.0" prefWidth="200.0"/>

    <Button text="Submit" onAction="#handleSubmitButtonAction" layoutX="14.0" layoutY="470.0"/>
</AnchorPane>
